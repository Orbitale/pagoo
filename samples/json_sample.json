{
    "webhooks": [
        {
            "name": "my_webhook_name",
            "matchers-strategy": "all",
            "matchers": [
                {
                    "match-json-body": {
                        "repository": {
                            "url": "https://github.com/my-org/my-repo"
                        },
                        "action": "published",
                        "release": {
                            "tag_name": "!regex:^v[0-9]+.[0-9]+.[0-9]+$"
                        }
                    }
                },
                {
                    "match-headers": {
                        "x-github-event": "release",
                        "x-github-delivery": "12345"
                    }
                }
            ],
            "actions-to-execute": "curl -i ...\nmy_binary --verbose ..."
        }
    ]
}
